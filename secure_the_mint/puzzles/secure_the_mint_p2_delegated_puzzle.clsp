; This puzzle is very similar to the p2_delegate puzzle,
; but it also announces the pre_launcher_id, so the pre_launcher can assert this spend actually happens
(mod (DELEGATED_PUZZLE pre_launcher_id delegated_solution)
  (include condition_codes.clib)

  (c
    (list CREATE_PUZZLE_ANNOUNCEMENT pre_launcher_id)
    (a DELEGATED_PUZZLE delegated_solution)
   )
)
